<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Software Questionnaire</title>
    <style>
        body {
            font-family: Arial, sans-serif;
        }
        .container {
            width: 60%;
            margin: 0 auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 10px;
            background-color: #f9f9f9;
        }
        .section {
            margin-bottom: 20px;
            padding: 20px;
            border: 1px solid #ddd;
            border-radius: 10px;
            background-color: #fff;
        }
        h2 {
            margin-top: 0;
        }
        table {
            width: 100%;
        }
        td {
            padding: 10px;
            vertical-align: top;
        }
        select {
            width: 100%;
            height: 150px;
        }
        .submit-btn {
            text-align: center;
            margin-top: 20px;
        }
        button {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }
        button:hover {
            background-color: #0056b3;
        }
    </style>
</head>
<body>
    <div class="container">
        <form method="post">
            <div class="section">
                <h2>General Information</h2>
                <table>
                    <tr>
                        <td>{{ form.version.label }}</td>
                        <td>{{ form.version }}</td>
                    </tr>
                    <tr>
                        <td>{{ form.aiTechniques.label }}</td>
                        <td>
                            <select name="options" multiple>
                                {% for value, label in form.aiTechniques.choices %}
                                    <option value="{{ value }}">{{ label }}</option>
                                {% endfor %}
                            </select>
                        </td>
                    </tr>
                    <tr>
                        <td>{{ form.providers.label }}</td>
                        <td>{{ form.providers }}</td>
                    </tr>
                    <tr>
                        <td>{{ form.developers.label }}</td>
                        <td>{{ form.developers }}</td>
                    </tr>
                </table>
            </div>
            <div class="section">
                <h2>Intended Use</h2>
                <table>
                    <tr>
                        <td>{{ form.domain.label }}</td>
                        <td>{{ form.domain }}</td>
                    </tr>
                    <tr>
                        <td>{{ form.purpose.label }}</td>
                        <td>{{ form.purpose }}</td>
                    </tr>
                    <tr>
                        <td>{{ form.capability.label }}</td>
                        <td>{{ form.capability }}</td>
                    </tr>
                    <tr>
                        <td>{{ form.deployers.label }}</td>
                        <td>{{ form.deployers }}</td>
                    </tr>
                    <tr>
                        <td>{{ form.aisubjects.label }}</td>
                        <td>{{ form.aisubjects }}</td>
                    </tr>
                </table>
            </div>
            <div class="submit-btn">
                <button type="submit">Submit</button>
            </div>
        </form>
    </div>
</body>
</html>

